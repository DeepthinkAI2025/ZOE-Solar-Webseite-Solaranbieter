# ZOE Solar Environment Variables (Example for Vercel Deployment)
# Kopieren Sie diese Datei nach .env.local und passen Sie die Werte an

# =============================================================================
# BASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_BASE_URL=https://zoe-solar.vercel.app
NEXT_PUBLIC_SITE_NAME=ZOE Solar
NEXT_PUBLIC_SITE_DESCRIPTION=Ihr Partner für Photovoltaik, Stromspeicher und E-Mobilität

# =============================================================================
# ANALYTICS & SEO CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SEO_DEBUG=false
NEXT_PUBLIC_FREE_ANALYTICS=true

# Free Analytics - Plausible (empfohlen)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=zoe-solar.vercel.app

# Google Analytics (optional - nicht notwendig da wir Free Analytics verwenden)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Alternative Analytics (auswählen)
NEXT_PUBLIC_ANALYTICS_PROVIDER=plausible
# Optionen: plausible, simple-analytics, umami, fathom, custom

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_DEFAULT_REGION=fra1
NEXT_PUBLIC_ENABLE_EDGE_RUNTIME=true
NEXT_PUBLIC_ENABLE_ISR=true

# =============================================================================
# SEO CONFIGURATION
# =============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=de-DE
NEXT_PUBLIC_LOCALES=de-DE,de-AT,de-CH

# Structured Data
NEXT_PUBLIC_ENABLE_STRUCTURED_DATA=true
NEXT_PUBLIC_ORGANIZATION_NAME=ZOE Solar GmbH
NEXT_PUBLIC_ORGANIZATION_URL=https://zoe-solar.vercel.app

# Local SEO
NEXT_PUBLIC_DEFAULT_CITY=Berlin
NEXT_PUBLIC_DEFAULT_PHONE=+49 30 12345678
NEXT_PUBLIC_DEFAULT_EMAIL=info@zoe-solar.de

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
NEXT_PUBLIC_BUSINESS_HOURS_START=08:00
NEXT_PUBLIC_BUSINESS_HOURS_END=18:00
NEXT_PUBLIC_BUSINESS_HOURS_WEEKEND=false

# Pricing
NEXT_PUBLIC_CURRENCY=EUR
NEXT_PUBLIC_DEFAULT_LANGUAGE=de

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_DEV_MODE=false

# Debug Mode (Development nur!)
NEXT_PUBLIC_DEBUG_ANALYTICS=false
NEXT_PUBLIC_DEBUG_PERFORMANCE=false
NEXT_PUBLIC_DEBUG_SEO=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Free Analytics API (wenn self-hosted)
NEXT_PUBLIC_ANALYTICS_API_URL=https://analytics.zoe-solar.vercel.app

# External APIs (falls benötigt)
NEXT_PUBLIC_WEATHER_API_KEY=
NEXT_PUBLIC_MAPS_API_KEY=
NEXT_PUBLIC_CALENDAR_API_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_AR_MODE=true
NEXT_PUBLIC_ENABLE_GESTURE_CONTROL=false
NEXT_PUBLIC_ENABLE_VOICE_INTERFACE=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_RATE_LIMITING=true
NEXT_PUBLIC_SESSION_TIMEOUT=1800000

# =============================================================================
# INTEGRATIONS
# =============================================================================
# Google Business Profile
NEXT_PUBLIC_GBP_ENABLED=true
NEXT_PUBLIC_GBP_API_KEY=

# HubSpot (falls verwendet)
NEXT_PUBLIC_HUBSPOT_PORTAL_ID=
NEXT_PUBLIC_HUBSPOT_FORM_ID=

# Newsletter
NEXT_PUBLIC_NEWSLETTER_PROVIDER=custom
NEXT_PUBLIC_MAILCHIMP_API_KEY=

# =============================================================================
# VERCEL SPECIFIC
# =============================================================================
# Wird automatisch von Vercel gesetzt:
# VERCEL_URL, VERCEL_ENV, VERCEL_GIT_COMMIT_REF, VERCEL_GITHUB_COMMENT, etc.

# Custom Regions (optional)
# VERCEL_REGION=fra1

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_CORE_WEB_VITALS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_ANALYTICS=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_CACHE_DURATION=86400
NEXT_PUBLIC_IMAGE_CACHE_DURATION=86400
NEXT_PUBLIC_STATIC_CACHE_DURATION=31536000

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================
NEXT_PUBLIC_EXPERIMENTAL_FEATURES=false
NEXT_PUBLIC_ENABLE_WEB_VITALS_REPORTING=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Hotjar (optional)
NEXT_PUBLIC_HOTJAR_ID=

# Clarity (optional)
NEXT_PUBLIC_CLARITY_ID=

# Crisp (optional)
NEXT_PUBLIC_CRISP_WEBSITE_ID=

# =============================================================================
# CUSTOM INTEGRATIONS
# =============================================================================
# CRM System (falls verwendet)
NEXT_PUBLIC_CRM_URL=
NEXT_PUBLIC_CRM_API_KEY=

# Project Management
NEXT_PUBLIC_PROJECT_MANAGEMENT_TOOL=

# E-commerce (falls hinzugefügt)
NEXT_PUBLIC_ECOMMERCE_PLATFORM=
NEXT_PUBLIC_PAYMENT_PROVIDER=

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry (optional für Error Monitoring)
NEXT_PUBLIC_SENTRY_DSN=

# LogRocket (optional für Session Replay)
NEXT_PUBLIC_LOGROCKET_APP_ID=

# =============================================================================
# SOCIAL MEDIA INTEGRATIONS
# =============================================================================
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=
NEXT_PUBLIC_FACEBOOK_APP_ID=
NEXT_PUBLIC_FACEBOOK_APP_SECRET=

NEXT_PUBLIC_LINKEDIN_PARTNER_ID=
NEXT_PUBLIC_LINKEDIN_CLIENT_ID=
NEXT_PUBLIC_LINKEDIN_CLIENT_SECRET=

# X (Twitter)
NEXT_PUBLIC_X_PIXEL_ID=
NEXT_PUBLIC_X_APP_ID=
NEXT_PUBLIC_X_APP_SECRET=

# Instagram
NEXT_PUBLIC_INSTAGRAM_BUSINESS_ACCOUNT=

# =============================================================================
# A/B TESTING
# =============================================================================
NEXT_PUBLIC_AB_TESTING_PROVIDER=custom
NEXT_PUBLIC_AB_TESTING_PERCENTAGE=50

# =============================================================================
# MESSAGING
# =============================================================================
# Slack Webhooks (optional)
NEXT_PUBLIC_SLACK_WEBHOOK_URL=

# Discord Webhooks (optional)
NEXT_PUBLIC_DISCORD_WEBHOOK_URL=

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
NEXT_PUBLIC_BACKUP_SCHEDULE=daily
NEXT_PUBLIC_BACKUP_RETENTION_DAYS=90

# =============================================================================
# LOCAL DEVELOPMENT
# =============================================================================
# Lokale Entwicklungsserver
LOCAL_PORT=3000
API_PORT=3001

# Lokale Datenbanken
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=zoe_solar_dev

# =============================================================================
# LEGACY SUPPORT
# =============================================================================
# Google Tag Manager
NEXT_PUBLIC_GTM_CONTAINER_ID=

# Facebook Pixel
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=

# Google AdWords
NEXT_PUBLIC_AW_CONVERSION_ID=
NEXT_PUBLIC_AW_LABEL=